---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="header u-container">
  <nav class="nav">
    <!-- <a class="logo" href="/">{SITE_TITLE}</a> -->
    <a class="logo" href="/">jacobberglund</a>
    <span class="slash">/</span>
    <a>The hue lab</a>
  </nav>
</header>

<style>
  .nav {
    display: flex;
    align-items: center;
    padding: var(--space-3xs) var(--grid-gutter);
    margin-inline: calc(var(--grid-gutter) * -1);
    border-radius: 2rem;
    background-color: rgba(255, 255, 255, 0.045);
    font-weight: 600;
    grid-column: 3 / span 5;
    gap: var(--space-3xs);
  }
  .slash {
    color: var(--gray-500);
  }
  .logo {
    /* text-transform: uppercase; */
    /* font-weight: 500; */
    /* font-size: var(--step--1); */
  }
  .header {
    padding-block: var(--space-xs);
  }
  .internal-links {
    display: flex;
    gap: var(--space-m);
  }
</style>
