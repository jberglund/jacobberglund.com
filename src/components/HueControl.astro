---
import Flex from "./utility/Flex.astro";
---

<div class="controls">
  <Flex gap="2xs" alignItems="baseline">
    <label for="hue">Hue</label>
    <input
      id="hue"
      name="hue"
      type="range"
      max="360"
      value="230"
      min="0"
      step="1"
    />
    <output for="hue">230</output>
  </Flex>

  <Flex gap="2xs" alignItems="baseline">
    <label for="angle">Angle</label>
    <input
      id="angle"
      name="angle"
      type="range"
      max="360"
      value="40"
      min="0"
      step="1"
    />
    <output for="angle">40</output>
  </Flex>
</div>

<style>
  .controls {
    width: 100%;
    display: flex;
    gap: var(--space-xs);
    position: sticky;
    top: 0%;
    padding: var(--space-xs);
    z-index: 100;
  }
  output {
    width: 5ch;
  }
</style>

<script is:inline>
  const hue = document.querySelector('input[name="hue"]');
  hue.addEventListener("input", (event) => {
    document.documentElement.style.setProperty(
      "--hue-primary",
      event.target.value
    );
    document.querySelector('output[for="hue"]').value = event.target.value;
  });

  const angle = document.querySelector('input[name="angle"]');
  angle.addEventListener("input", (event) => {
    document.documentElement.style.setProperty(
      "--hue-angle",
      event.target.value
    );
    document.querySelector('output[for="angle"]').value = event.target.value;
  });
</script>
