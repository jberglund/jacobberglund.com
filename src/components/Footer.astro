---
import Flex from "./utility/Flex.astro";
const today = new Date();
---

<footer>
  <Flex direction="column" gap="3xs">
    <div>
      The year is {today.getFullYear()}.
    </div>
    <Flex gap="xs" justifyContent="center">
      <a href="/rss.xml">RSS Feed</a>
      <a
        href="https://github.com/jberglund/jacobberglund.com"
        target="_blank"
        referrerpolicy="no-referrer">View source</a
      >
    </Flex>
  </Flex>
</footer>
<style>
  footer {
    padding: var(--space-2xl) var(--space-l);
    background: linear-gradient(var(--gray-gradient)) no-repeat;
    color: rgb(var(--gray));
    text-align: center;

    display: grid;
    align-content: center;
  }
</style>
