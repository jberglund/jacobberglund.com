---
import SiteLayout from "../layouts/SiteLayout.astro";
---

<SiteLayout>
  <h1>Playground!</h1>
  <div class="palette">
    <div class="swatch" style="--swatch: var(--primary-100)"></div>
    <div class="swatch" style="--swatch: var(--primary-200)"></div>
    <div class="swatch" style="--swatch: var(--primary-300)"></div>
    <div class="swatch" style="--swatch: var(--primary-400)"></div>
    <div class="swatch" style="--swatch: var(--primary-500)"></div>
    <div class="swatch" style="--swatch: var(--primary-600)"></div>
    <div class="swatch" style="--swatch: var(--primary-700)"></div>
    <div class="swatch" style="--swatch: var(--primary-800)"></div>
    <div class="swatch" style="--swatch: var(--primary-900)"></div>
    <div class="swatch" style="--swatch: var(--primary-1000)"></div>

    <div class="swatch" style="--swatch: var(--secondary-100)"></div>
    <div class="swatch" style="--swatch: var(--secondary-200)"></div>
    <div class="swatch" style="--swatch: var(--secondary-300)"></div>
    <div class="swatch" style="--swatch: var(--secondary-400)"></div>
    <div class="swatch" style="--swatch: var(--secondary-500)"></div>
    <div class="swatch" style="--swatch: var(--secondary-600)"></div>
    <div class="swatch" style="--swatch: var(--secondary-700)"></div>
    <div class="swatch" style="--swatch: var(--secondary-800)"></div>
    <div class="swatch" style="--swatch: var(--secondary-900)"></div>
    <div class="swatch" style="--swatch: var(--secondary-1000)"></div>

    <div class="swatch" style="--swatch: var(--tertiary-100)"></div>
    <div class="swatch" style="--swatch: var(--tertiary-200)"></div>
    <div class="swatch" style="--swatch: var(--tertiary-300)"></div>
    <div class="swatch" style="--swatch: var(--tertiary-400)"></div>
    <div class="swatch" style="--swatch: var(--tertiary-500)"></div>
    <div class="swatch" style="--swatch: var(--tertiary-600)"></div>
    <div class="swatch" style="--swatch: var(--tertiary-700)"></div>
    <div class="swatch" style="--swatch: var(--tertiary-800)"></div>
    <div class="swatch" style="--swatch: var(--tertiary-900)"></div>
    <div class="swatch" style="--swatch: var(--tertiary-1000)"></div>

    <div class="swatch" style="--swatch: var(--gray-100)"></div>
    <div class="swatch" style="--swatch: var(--gray-200)"></div>
    <div class="swatch" style="--swatch: var(--gray-300)"></div>
    <div class="swatch" style="--swatch: var(--gray-400)"></div>
    <div class="swatch" style="--swatch: var(--gray-500)"></div>
    <div class="swatch" style="--swatch: var(--gray-600)"></div>
    <div class="swatch" style="--swatch: var(--gray-700)"></div>
    <div class="swatch" style="--swatch: var(--gray-800)"></div>
    <div class="swatch" style="--swatch: var(--gray-900)"></div>
    <div class="swatch" style="--swatch: var(--gray-1000)"></div>
  </div>
  <div>
    <div class="card">
      <h4 class="h5">I'm a card</h4>
      <small>Lorem ipsum dolor</small>
      <p>
        Lorem ipsum dolor, sit amet consectetur adipisicing elit. Itaque
        doloremque modi veniam aspernatur voluptatum labore dolores
        perspiciatis.
      </p>
    </div>
  </div>
  <!-- <div class="gradients">
    <div class="gradient"></div>
    <div class="radial-gradient"></div>
  </div> -->
</SiteLayout>
<style>
  .card {
    display: grid;
    gap: 1ch;
    border-radius: 10px;
    background: var(--surface-2);
    border: 1px solid var(--surface-3);
    padding: 1rem;
  }
  small {
    color: var(--text-2);
  }
  .palette {
    width: 100%;
    display: grid;
    grid-auto-columns: var(--space-3xl);
    grid-template-rows: repeat(10, var(--space-xl));
    grid-auto-flow: column;
    justify-content: center;
  }

  .swatch {
    background-color: var(--swatch);
  }

  .gradient {
    height: 80vh;
    width: 200px;
    background-color: #4158d0;
    background-image: linear-gradient(
      43deg,
      var(--primary-600) 0%,
      var(--secondary-400) 46%,
      var(--tertiary-200) 100%
    );
  }

  .radial-gradient{
    background: radial-gradient(circle, var(--secondary-400) 0%, var(--color-background) 66% );
    width: 80vw;
    height: 80vw;
    opacity: 0.6;
  }
</style>
