<style>
  .cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-auto-rows: max-content;
    gap: var(--space-m);
  }
  .card {
    display: grid;
    gap: 1ch;
    border-radius: 10px;
    background: var(--surface-2);
    border: 1px solid var(--surface-3);
    padding: 1rem;
  }
  small {
    color: var(--text-2);
  }
  .palette {
    width: 100%;
    display: grid;
    grid-auto-columns: var(--space-3xl);
    grid-template-rows: repeat(11, var(--space-xl));
    grid-auto-flow: column;
    justify-content: center;
  }

  .swatch {
    background-color: var(--swatch);
    color: transparent;
    padding: var(--space-3xs);
  }
  .swatch:hover {
    color: var(--primary-300);
  }

  .swatch-title {
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding: var(--space-3xs);
    color: var(--gray-200);
  }

  .gradient {
    height: 600px;
    width: 200px;
    background-color: #4158d0;
    background-image: linear-gradient(
      43deg,
      var(--primary-600) 0%,
      var(--secondary-400) 46%,
      var(--tertiary-200) 100%
    );
  }

  .radial-gradient {
    background: radial-gradient(
      circle,
      var(--secondary-400) 0%,
      var(--color-background) 66%
    );
    width: 80vw;
    height: 80vw;
    opacity: 0.6;
  }
</style>
